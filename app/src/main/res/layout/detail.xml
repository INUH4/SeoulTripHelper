<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btn_leftImage"
            android:src="@drawable/left_black_arrow"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:background="#00000000"
            android:layout_alignTop="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:src="@drawable/right_black_arrow"
            android:cropToPadding="false"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/img_LargeImage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/abc_btn_check_to_on_mtrl_015" />
    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/detail_list"
        android:layout_gravity="center_horizontal"
        android:choiceMode="singleChoice"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="별점 &amp; 리뷰"
        android:id="@+id/page_name"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignLeft="@+id/page_name"
        android:layout_alignStart="@+id/page_name"
        android:layout_below="@+id/page_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentStar"
        android:text="1.0"
        android:textSize="30dp"
        android:layout_marginTop="9dp"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_toRightOf="@+id/ratingBar"
        android:layout_toEndOf="@+id/ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/ 5.0"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:layout_alignTop="@+id/currentStar"
        android:layout_toRightOf="@+id/currentStar"
        android:layout_toEndOf="@+id/currentStar"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/ratingBar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>